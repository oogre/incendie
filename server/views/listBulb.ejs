<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title></title>
        <link rel="stylesheet" href="./styles/sortable.css" />
    </head>
    <body>
        <ul class="sortable-list">
            <% bulbs.forEach((item, key) => { %>
                <li class="item" draggable="true" data-value="<%= item %>">
                    <div class="details">
                        <img alt="<%= key %>" src="images/img-1.jpg">
                        <span><%= item.match(/.{2}/g).join(':') %></span>
                    </div>
                    <i class="uil uil-draggabledots"></i>
                </li>
            <% }) %>
        </ul>        
        <script src="./scripts/sortable.js"></script>
    </body>
</html>
